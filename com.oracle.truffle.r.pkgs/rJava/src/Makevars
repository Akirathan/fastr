# this is a hack to force SHLIB to run our sub-make
jri:
	(cd ../jri && $(MAKE))
	-@mkdir -p ../inst/jri
	@(cp -r ../jri/src/JRI.jar ../jri/*jri.* ../jri/run ../jri/examples ../inst/jri/)

